<monitors version="2">
  <configuration>
    <logicalmonitor>
      <x>0</x>
      <y>0</y>
      <scale>1</scale>
      <primary>yes</primary>
      <monitor>
        <monitorspec>
          <connector>default</connector>
          <vendor>unknown</vendor>
          <product>unknown</product>
          <serial>unknown</serial>
        </monitorspec>
        <mode>
          <width>{{ screen_resolution_width }}</width>
          <height>{{ screen_resolution_height }}</height>
          <rate>0</rate>
        </mode>
      </monitor>
    </logicalmonitor>
  </configuration>
</monitors>